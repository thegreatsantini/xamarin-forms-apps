<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.AbsoluteLayout">
   <AbsoluteLayout>
        <BoxView Color="Aqua"
                 AbsoluteLayout.LayoutBounds="0,0,1,1" 
                 AbsoluteLayout.LayoutFlags="All"
                 />
        <BoxView Color="Green" 
                 AbsoluteLayout.LayoutBounds="0, 30, 100, 100" 
                 />
        <BoxView Color="Lime"
                 AbsoluteLayout.LayoutBounds="0.5, 0.5, 100, 100" 
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 />
        <Button Text="Get Started" BackgroundColor="Silver" TextColor="Black"
                AbsoluteLayout.LayoutBounds="0, 1, 1, 50" 
                AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" 
                />
    </AbsoluteLayout>
</ContentPage>
