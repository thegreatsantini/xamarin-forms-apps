<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Padding="0, 30, 0, 0"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HelloWorld.StackLayoutExercise2">
    <StackLayout
        >
        <StackLayout Padding="12, 25, 0, 25" >
            <Label
                FontSize="Large"
                Text="nyc_photographer" 
            />
        </StackLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        <StackLayout
            Padding="20"
            Orientation="Horizontal"
            Spacing="15"
            >
            <Label TextColor=" Blue" Text="Like" />
            <Label TextColor="Blue" Text="Comment" />
            <Label TextColor="Blue" Text="Share" />
         </StackLayout>
        <StackLayout Padding="12, 0, 12 , 0" >
            <BoxView
                HeightRequest="1"
                Color="#f0f0f0" 
            />
            <Label 
                FontAttributes="Bold"
                Text="7000 likes" />
            <Label
                TextColor="Gray"
                Text="This was was taken last weekend in Kapor, Swedden. I was taking my dog for his morning walk and was blown away with the view. It was the first time I was the rocks and the water because I arrived after dark the nigth before" />
        </StackLayout>
    </StackLayout>
</ContentPage>
